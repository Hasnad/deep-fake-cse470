@model UploadIndex

    <div class="row">
        <div class="col-lg-12">
            <div class="card-body p-5">
                <h1 class="font-weight-light text-center">Check if your image is real or fake</h1>
                <div class="row justify-content-center mt-5">
                    <div class="col-md-8">
                        <form asp-action="Index" asp-controller="Upload" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                            <div class="form-group">
                                @* <label asp-for="FileToUpload" class="form-label"></label> *@
                                <input asp-for="FileToUpload" type="file" accept=".jpg,.jpeg,.png" class="form-control"/>
                            </div>
                            <div class="form-group mt-3 text-center">
                                <input type="submit" value="Upload" class="btn btn-primary btn-block"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
