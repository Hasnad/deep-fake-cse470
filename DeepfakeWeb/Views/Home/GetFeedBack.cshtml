@model DeepfakeWeb.Models.Home.Feedback

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <img src="data:image/png;base64,@Model.ImageData.OriginalImageBase64" class="img-fluid fixed-size-big" alt="Image"/>
            <form asp-action="OnPostFeedBack" asp-controller="Home" method="post">
                <div class="form-group">
                    <label asp-for="ImageId" class="form-label" hidden></label>
                    <input asp-for="ImageId" type="text" class="form-control" hidden/>
                </div>
                <div class="form-group">
                    <label asp-for="AppUserEmail" class="form-label" disabled></label>
                    <input asp-for="AppUserEmail" type="text" class="form-control" disabled/>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" type="text" class="form-control"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 text-center">
                    <input type="submit" value="Submit Feedback" class="btn btn-primary btn-block"/>
                </div>
            </form>
        </div>
    </div>
</div>